initial_command = "search tag:inbox"
prefer_plaintext = True
editor_cmd = "vim"
bug_on_exit = True
attachment_prefix="/home/rien/Downloads/"

[bindings]
    0 = taglist
    1 = search tag:inbox
    2 = search tag:sent
    3 = search *
    4 = search tag:posteo
    5 = search tag:ugent
    6 = search tag:gmail
    7 = search tag:feed
    r = refresh

    [[search]]
        x = toggletags killed
        & =
        ! =

    [[thread]]
        a = toggletags inbox
        A = untag inbox ; bclose ; refresh
        n = move next
        N = move previous
        r = reply --all
        R = reply

